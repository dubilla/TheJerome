<h2><%= @tournament.name  %></h2>

<div class="mt-8">
  <ul class="list-reset">
    <% @tournament.teams.sort_by{|t| -t.round.order }.each do |t| %>
      <li class="max-w-md w-full lg:flex border border-grey-light lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal my-4 <%= t.eliminated? ? "bg-red-lighter" : t.round.name == "Champion" ? "bg-green-light" : t.round.name == "Finals" ?  "bg-green-lighter" : @tournament.locked? ? "bg-yellow-light": "" %>">
        <div class="text-black font-bold text-xl mb-2">
          <%= t.name %>
        </div>
        <div class="clear">
          <div class="text-grey-darker text-base float-left">
            <%= t.picks.map(&:entry).map(&:name).join(', ') %>
          </div>
          <div class="text-grey-dark float-right italic text-sm">
            <%= t.round.name %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
