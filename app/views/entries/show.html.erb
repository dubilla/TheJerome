<h2>Your Entry</h2>

<% if current_user.entry == @entry %>
  <div class="my-4">
    <%= link_to 'Edit Entry', edit_entry_path(@entry) %>
  </div>

  <div>
    Points Possible Remaining:
    <%= @entry.points_possible_remaining %>
  </div>

  <div class="mt-8">
    <ul class="list-reset">
      <% @entry.picks.each do |p| %>
        <li class="max-w-md w-full lg:flex border border-grey-light lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal my-4 <%= p.team.eliminated? ? "bg-red-lighter" : p.tournament.locked? ? "bg-yellow-light": "" %>">
          <div class="text-black font-bold text-xl mb-2">
            <% if p.tournament.locked? %>
              <%= link_to p.tournament.name, tournament_path(p.tournament) %>
            <% else %>
              <%= p.tournament.name %>
            <% end %>
          </div>
          <div class="clear">
            <div class="text-grey-darker text-base float-left">
              <%= p.team.name %>
            </div>
            <div class="text-grey-dark float-right italic text-sm">
              <%= p.team.round.name %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
