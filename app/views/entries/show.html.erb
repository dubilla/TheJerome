<h2>Your Entry</h2>

<% if current_user.entry == @entry %>
  <div class="my-4">
    <%= link_to 'Edit Entry', edit_entry_path(@entry) %>
  </div>

  <div class="mt-8">
    <ul class="list-reset">
      <% @entry.picks.each do |p| %>
        <li class="max-w-md w-full lg:flex border border-grey-light lg:border-t lg:border-grey-light bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal my-4">
          <div class="text-black font-bold text-xl mb-2">
            <%= p.tournament.name %>
          </div>
          <div class="text-grey-darker text-base">
            <%= p.team.name %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
